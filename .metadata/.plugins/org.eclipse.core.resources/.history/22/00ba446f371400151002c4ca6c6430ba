package ch.rwi.hamcrest_vs_assertj.custommatcher;

import org.hamcrest.Description;
import org.hamcrest.Factory;
import org.hamcrest.Matcher;
import org.hamcrest.TypeSafeMatcher;

/**
 *
 * 
 *
 * @author u211732 (Ren√© Winkler)
 * @version $Id: $
 * @since 0.0.1, 2015
 */
public class IsLongerThanTwoHours extends TypeSafeMatcher<Integer> {


    public void describeTo(Description description) {
        description.appendText("Movie's duration ist shorter than 120min.");
    }

    @Override
    protected boolean matchesSafely(Integer duration) {
        return duration > 120;
    }

    @Factory
    public static <T> Matcher<Integer> isLongerThanTwoHours() {
        return new IsLongerThanTwoHours();
    }

}
